doctype html
html(lang="jp")
  head
    meta(charset="UTF-8")
    title 秘密の匿名掲示板
  body
    h1 秘密の匿名掲示板
    a(href="/logout") ログアウト
    h2 新規投稿
    form(method="post" action="/posts")
      div
        textarea(name="content" cols=40 rows=4)
      div
        button(type="submit") 投稿
    h2 投稿一覧
    each content, index in contents
      p [投稿番号 #{index + 1}]<br>#{content}
      hr